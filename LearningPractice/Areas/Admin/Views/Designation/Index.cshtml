
@model IEnumerable<Designation>

@{
    ViewData["Title"] = "Index";
}

<h4>Designation List</h4>
<hr />
<div>
<h4 class="text-danger" >@TempData["Message"]</h4>


</div>
<table class="table table-hover">
    <thead>
        <tr>
           
            @*<th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>*@
            <th>
                @Html.ActionLink("DesignationName","Index", new{sortBy =ViewBag.SortNameParam})
            </th>
          
            <th>
                <a asp-action="UpsertDesig" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Designation</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
         
            <td>
                <a asp-action="UpsertDesig" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg">Update</i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
