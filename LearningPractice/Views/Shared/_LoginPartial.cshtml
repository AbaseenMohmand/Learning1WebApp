@inject Microsoft.AspNetCore.Identity.SignInManager<Learning1.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
   <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name! </li>
            <li><a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form> 
}

else
{

    <ul class="nav navbar">
        <li class="nav-item">
            <a class="nav-link text-white" id="registerLink" asp-area="Account" asp-controller="Account" asp-action="Register">Register</a>
        </li>
         <li class="nav-item">
            <a class="nav-link text-white" id="loginLink" asp-area="Account" asp-controller="Account" asp-action="Login">Login</a>
        </li>

    </ul>
}